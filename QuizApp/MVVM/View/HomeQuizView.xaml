<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizApp.MVVM.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="QuizApp.MVVM.View.HomeQuizView"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="My Quizzes"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"
                   FontFamily="/Fonts/Poppins/#Poppins"
                   />
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">

            <!--Temp style - Not styled yet-->
            <Button Content="Start Quiz!" 
                        Width="400"
                        Height="200"
                        Background="Aqua"
                        Click="Button_Click" />






        </StackPanel>

        <StackPanel>
            <TextBlock Text="Community Quizzes"
                   Foreground="White"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"
                   FontFamily="/Fonts/Poppins/#Poppins"
                   />
            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                    Height="130"
                    Background="BlueViolet"
                    CornerRadius="10"
                    />


            </StackPanel>

        </StackPanel>

    </StackPanel>
</UserControl>
