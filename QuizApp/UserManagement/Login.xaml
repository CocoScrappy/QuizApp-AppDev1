<Window x:Class="QuizApp.UserManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp.UserManagement"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
        WindowStyle="None">
    <Grid>
        <StackPanel>
            <Label Name="LblUsername" HorizontalAlignment="Center">Username</Label>
            <TextBox Name="TbxUsername" HorizontalAlignment="Center" Width="300"></TextBox>
            <Label Name="LblPass" HorizontalAlignment="Center">Password</Label>
            <PasswordBox Name="PbxPass" HorizontalAlignment="Center" Width="300"></PasswordBox>
            <Button Name="BtnLogin" Click="BtnLogin_Click" Content="Login" HorizontalAlignment="Center"></Button>
            <Label Content="" Name="LblUsernameCurrent" HorizontalAlignment="Center"></Label>
            
            <Image Margin="12,12,16,71" Name="userAvatar"
                Stretch="Fill" Height="150" Width="150"  />
            
        </StackPanel>
    </Grid>
</Window>
