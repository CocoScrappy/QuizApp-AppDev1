<Window x:Class="QuizApp.UserManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp.UserManagement"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
        WindowStyle="None">
    <Grid>
        <StackPanel>
            <Label>Username</Label>
            <TextBox Name="Username"></TextBox>
            <Label>Password</Label>
            <PasswordBox Name="Pass"></PasswordBox>
            <Button Name="LoginBtn" Click="LoginBtn_Click" Content="Login"></Button>
            <Label Content="" Name="UsernameLbl" HorizontalAlignment="Center"></Label>
            
            <Image Margin="12,12,16,71" Name="userAvatar"
                Stretch="Fill" Height="150" Width="150"  />
            
        </StackPanel>
    </Grid>
</Window>
