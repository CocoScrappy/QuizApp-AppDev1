<Window x:Class="QuizApp.UserManagement.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp.UserManagement"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800"
        WindowStyle="None">
    <Grid>

        <StackPanel>
            <Image Margin="12,12,16,71" Name="userAvatar"
                Stretch="Fill" Height="150" Width="150"  />
            <Label>Email</Label>
            <TextBox Name="TbxEmail"></TextBox>
            <Label>Username</Label>
            <TextBox Name="TbxUsername"></TextBox>
            <Label>Password</Label>
            <PasswordBox Name="PbxPass"></PasswordBox>
            <Label>Confirm Password</Label>
            <PasswordBox Name="PbxConfirmPass"></PasswordBox>
            <Button Height="23" HorizontalAlignment="Left"
                Margin="12,0,0,34" Name="BtnLoad" Click="BtnLoad_Click">_Load</Button>
            <Button Name="Register" Click="BtnRegister_Click">
                Register
            </Button>
        </StackPanel>
    </Grid>
</Window>
